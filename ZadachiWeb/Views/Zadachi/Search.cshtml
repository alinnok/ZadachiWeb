@model IEnumerable<ZadachiData.Entities.Zadacha>


<h3>Поиск задачи по тэгу:</h3>
<div>
    <form asp-controller="Zadachi" asp-action="Search" method="POST">
    <p>Тэг:
        <input type="text"  name="Tag">
    </p>
    <input type="submit" value="Искать">
    </form>
</div>

<div>
<table>
    <thead>
        <th>Id</th>
        <th>Название</th>
        <th>Описание</th>
        <th>Тэг</th>
        <th>Дата создания</th>
    </thead>
    <tbody>
        @foreach (var zadacha in Model)
        {
        <tr>
            <td>@zadacha.Id</td>
            <td>@zadacha.Name</td>
            <td>@zadacha.Description</td>
            <td>@zadacha.Tag</td>
            <td>@zadacha.CreationDate</td>
            <td><a href="/Zadachi/Delete/@(zadacha.Id)" >Удалить</a></td>
        </tr>
        }
    </tbody>
</table>
</div>




